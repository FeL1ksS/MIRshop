{% if error_warning %}
<div class="alert alert-warning alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
{% endif %}
{% if payment_methods %}
<p>{{ text_payment_method }}</p>
{% for payment_method in payment_methods %}
<div class="radio">
  <label class="radio-label">{% if payment_method.code == code or not code %}
    {% set code = payment_method.code %}
    <input class="radio-label__input" type="radio" name="payment_method" value="{{ payment_method.code }}" checked="checked" />
    <span class="radio-label__box"></span>
    {% else %}
    <input class="radio-label__input" type="radio" name="payment_method" value="{{ payment_method.code }}" />
    <span class="radio-label__box"></span>
    {% endif %}
    {{ payment_method.title }}
    {% if payment_method.terms %}
    ({{ payment_method.terms }})
    {% endif %} </label>
</div>
{% endfor %}
{% endif %}
<p><strong>{{ text_comments }}</strong></p>
<p>
  <textarea name="comment" rows="8" class="form-control">{{ comment }}</textarea>
</p>
{% if text_agree %}
<div class="checkbox">
  <label class="check">
      {% if agree %}
      <input class="check__input" type="checkbox" name="agree" value="1" checked="checked" />
      <span class="check__box"></span>
      {% else %}
      <input class="check__input" type="checkbox" name="agree" value="1" />
      <span class="check__box"></span>
      {% endif %}
    {{ text_agree }} 
  </label>
</div>
{% endif %}
<div class="buttons">
    <div class="pull-right">
      <input type="button" value="{{ button_continue }}" id="button-payment-method" data-loading-text="{{ text_loading }}" class="shopping-actions__btn shopping-actions__accept-checkout" />
    </div>
</div>